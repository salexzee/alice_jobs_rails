%h1.text-primary= @job.title
%p.text-success.job-description= markdown @job.description
%p.text-success.lead= @job.company
%p.text-muted= "Created " + time_ago_in_words(@job.created_at) + " ago"
%button.btn.btn-default= link_to "Apply for Job!", @job.url

%hr

#links
	= link_to "Back", root_path, class: "btn btn-small btn-default"
	-if @job.user == current_user
		= link_to "Edit", edit_job_path(@job), class: "btn btn-small btn-default"
		= link_to "Delete", job_path(@job), method: :delete, data: {confirm: "Are you sure?"}, class: "btn btn-small btn-default"